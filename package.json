{
  "name": "@filmgardi/videojs-vast",
  "version": "1.0.1",
  "description": "HTML5 video player with VAST support",
  "main": "dist/player.js",
  "vjsstandard": {
    "ignore": [
      "dist",
      "test",
      "config",
      "/*.js"
    ]
  },
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "copy:fonts": "shx cp -R node_modules/video.js/dist/font ./dist/font",
    "clean": "rm -rf dist",
    "lint": "vjsstandard",
    "start": "webpack-dev-server --config webpack.dev.js",
    "test": "jest",
    "watch": "webpack --config webpack.watch.js"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "globalSetup": "./config/puppeteer/global-setup.js"
  },
  "author": "Philip Watson",
  "repository": {
    "type": "git",
    "url": "https://github.com/saffari-m/videojs-vast.git"
  },
  "license": "MIT",
  "dependencies": {
    "vast-client": "^2.0.4",
    "video.js": "^6",
    "videojs-contrib-ads": "^6.6.1",
    "vpaid-html5-client": "github:MailOnline/VPAIDHTML5Client#0.1.14"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.0.1",
    "cors": "^2.8.5",
    "css-loader": "^1.0.0",
    "express": "^4.16.4",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.4.0",
    "mini-css-extract-plugin": "^0.8.0",
    "mustache-express": "^1.3.0",
    "portfinder": "^1.0.20",
    "puppeteer": "^1.14.0",
    "shx": "^0.3.4",
    "style-loader": "^0.23.0",
    "videojs-standard": "^8.0.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
